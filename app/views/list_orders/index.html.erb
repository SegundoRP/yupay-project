<div class="container-fluid">
  <div class="row">
    <%= render "shared/sidebar" %>
    <main role="main" class="col-md-11 ml-sm-auto col-lg-11 px-md-4">
      <h1>Nueva venta</h1>
        <%= render 'shared/order_form_items', list_order: @list_order %>
      <h2>Carrito</h2>
      <% if @list_orders.present? %>
        <ul>
          <% @list_orders.each do |order| %>
            <li><%= order.product.name %> | Cantidad: <%= order.quantity %></li>
          <% end %>
        </ul>
      <% end %>
      <div>
        <%= link_to "Cancelar", order_path(@order), method: "delete", class: "btn btn-danger", data: { confirm: "Cancelar compra?" } %>
        <%= link_to "Confirmar", confirm_order_path(@order), method: "post", class: "btn btn-success", data: { confirm: "Confirmar compra?" } %>
      </div>
    </main>
  </div>
</div>
