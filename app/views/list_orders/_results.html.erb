<div class="search_results"  data-refresh-products-list-target="results">
  <% if params[:query].blank? %>
    <h1 class="h3"><%= pluralize @products.count, 'producto' %> disponibles</h1>
  <% else %>
    <h1 class="h3"><%= pluralize @products.count, 'resultado' %> para <code><%= params[:query] %></code></h1>
  <% end %>
  <div class="products">
    <% @products.each do |product| %>
      <div class="">
        <h5><%= product.name %> <small>(<%= product.price %>)</small><small>(<%= product.bar_code %>)</small></h5>
      </div>
    <% end %>
  </div>
</div>
