<div class="container-fluid">
  <div class="row">
    <%= render "shared/sidebar" %>
    <main role="main" class="col-md-11 ml-sm-auto col-lg-11 px-md-4">
      <h1>Resumen de venta</h1>
      <h2>Cliente: <%= @order.customer.name %></h2>
      <ul>
        <% @order.list_orders.each do |item| %>
          <li><%= item.product.name %> | Cantidad: <%= item.quantity %></li>
        <% end %>
      </ul>
    </main>
  </div>
</div>
