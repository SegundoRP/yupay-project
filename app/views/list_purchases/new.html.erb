<div class="container-fluid">
  <div class="row">
    <%= render "shared/sidebar" %>
    <main role="main" class="col-md-11 ml-sm-auto col-lg-11 px-md-4">
      <h1>Ingresar mercaderia</h1>
      <%= render 'shared/purchase_form', list_purchase: @list_purchase %>
      <h2>Carrito??</h2>
      <% if @list_purchases.present? %>
        <ul>
          <% @list_purchases.each do |purchase| %>
            <li><%= purchase.product.name %> | Cantidad: <%= purchase.quantity %></li>
          <% end %>
        </ul>
      <% end %>
    </main>
  </div>
</div>
